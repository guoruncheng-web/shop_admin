# ========================================
# 生产环境配置 (Production Environment)
# ========================================

# 应用配置
NODE_ENV=production
PORT=3000
API_PREFIX=/api
API_DOCS_ENABLED=false

# 数据库配置 - 生产环境
DATABASE_HOST=your_prod_db_host
DATABASE_PORT=3306
DATABASE_USERNAME=your_prod_db_user
DATABASE_PASSWORD=your_prod_db_password
DATABASE_NAME=wechat_mall_prod
DATABASE_CHARSET=utf8mb4
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# Redis配置 - 生产环境
REDIS_HOST=your_prod_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_prod_redis_password
REDIS_DB=0
REDIS_TTL=7200

# Session配置
SESSION_SECRET=your_prod_session_secret_2024
SESSION_MAX_AGE=86400000

# JWT配置
JWT_SECRET=your_prod_jwt_secret_key_2024
JWT_EXPIRES_IN=7d

# 跨域配置
CORS_ORIGIN=https://your-domain.com,https://admin.your-domain.com

# 日志配置
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/prod.log

# 验证码配置
CAPTCHA_LENGTH=6
CAPTCHA_EXPIRES=300

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=uploads/prod

# 邮件配置 (生产环境)
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_SECURE=true
MAIL_USER=noreply@your-domain.com
MAIL_PASS=your_mail_password

# 微信小程序配置
WECHAT_APPID=your_prod_appid
WECHAT_SECRET=your_prod_secret

# 支付配置 (生产环境)
PAYMENT_MERCHANT_ID=your_prod_merchant
PAYMENT_KEY=your_prod_key
PAYMENT_NOTIFY_URL=https://your-domain.com/api/payment/notify

# 缓存配置
CACHE_TTL=7200
CACHE_MAX_ITEMS=5000

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# 安全配置
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
